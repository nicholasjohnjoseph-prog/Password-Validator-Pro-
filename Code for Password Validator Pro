import random
import string

password = input("Enter a password to test: ")

# --- 1. PATTERN KILLER ---

# Check A: Repetitive characters (e.g., 'aaaaa' or '121212')
is_repetitive = len(set(password)) <= 2 

# Check B: Sequential numbers (e.g., '12345678' or '98765432')
ascending = "01234567890123456789"
descending = "98765432109876543210"
is_sequential = password in ascending or password in descending

# Check C: Repeating chunks (e.g., '12341234')
# This looks for a pattern that repeats at least twice
is_chunk_repeat = False
for i in range(2, len(password) // 2 + 1):
    chunk = password[:i]
    if chunk * (len(password) // i) == password:
        is_chunk_repeat = True
        break

# --- 2. GATHER DATA ---
length = len(password)
digits = sum(c.isdigit() for c in password)
letters = sum(c.isalpha() for c in password)
symbols = sum(not c.isalnum() for c in password)

# --- 3. LOGIC TIERS ---
status = ""
# The Pattern Killer trigger
if length < 8 or is_repetitive or is_sequential or is_chunk_repeat:
    status = "WEAK"
    print("‚ùå Status: WEAK (Pattern or Length issue)")
elif password.isdigit() and length < 13:
    status = "MEDIUM"
    print("‚ö†Ô∏è Status: MEDIUM (Only numbers & under 13 digits)")
elif digits >= 10 and symbols >= 1:
    status = "PERFECT"
    print("üëç Status: PERFECT")
elif digits >= 8 and (symbols >= 1 or letters >= 2):
    status = "VERY STRONG"
    print("üõ°Ô∏è Status: VERY STRONG")
else:
    status = "STRONG"
    print("‚úÖ Status: STRONG")

# --- 4. THE HUMAN OFFER ---
if status in ["WEAK", "MEDIUM"]:
    choice = input("\nYour password is quite weak. Want me to generate a 20 character, unbreakable one for you? (yes/no): ")
    
    if choice.lower() == 'yes':
        pool = string.ascii_letters + string.digits + string.punctuation
        # Updated to 20
        new_password = "".join(random.choice(pool) for _ in range(20))
        
        print("\n--- NEW PASSWORD ---")
        print(f"Generated: {new_password}")
        print("Note: This would take roughly 800 quadrillion years to cracküíÄ.")
        print("--------------------")
else:
    print("\nNice work! Your digital footprint is safe today.")
